/* pages/shopper/shopperInfo/shopperInfo.wxss */
.page {
  background-color: #F7F7F7;
  width: 100%;
  font-size: 14px;
  padding: 1%;
}
.search-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 96%;
  margin: 1% 2%;
}
.search-bar input {
  width: 70%;
  border: 1px solid #e9e9e9;
}
.search-search {
  border: 1px solid #e9e9e9;
  padding: 2px;
  background-color: #4E6EF2;
  color: #fff;
}
.add-person {
  width: 55rpx;
  height: 55rpx;
}
.content {}
.user {
  background-color: #fff;
  width: 96%;
  height: auto;
  border-radius: 10px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 2% 1% 2% 1%;
}
.user-header {
  height: 100px;
  width: 175rpx;
}
.user-occup {
  margin-top: 5px;
  width: 100%;
}
.user-info {
  width: 400rpx;
  margin-left: 20rpx;
}
.user-setting {
  width: 100rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.user-modify {
  color: #007ACC;
  padding: 4px;
}
.user-delete {
  color: #f00;
  padding: 4px;
}